datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Plant {
  id          String   @id @default(uuid())
  userId      String
  nickname    String
  lastWatered DateTime

  user     User       @relation(fields: [userId], references: [id])
  Reminder Reminder[]
}


// TODO: Remove this
model Species {
  id             String  @id @default(uuid())
  scientificName String
  genus          String
  family         String
  commonName     String?
  imageUrl       String?
  light          String?
  urlWikipediaEn String?
  waterFrequency Int?
}

model User {
  id                  String     @id @default(uuid())
  name                String     @unique
  email               String     @unique
  password            String
  isVerified          Boolean    @default(false)
  verificationCode    String?
  passwordResetCode   String?
  notificationEnabled Boolean    @default(false)
  expiresAt           DateTime?
  Plant               Plant[]
  Reminder            Reminder[]
}

model Reminder {
  id      String @id @default(uuid())
  userId  String
  plantId String

  createdAt DateTime @default(now())
  label     String

  plant Plant @relation(fields: [plantId], references: [id])
  user  User  @relation(fields: [userId], references: [id])
}
