datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Plant {
  id          String   @id @default(uuid())
  userId      String
  nickname    String
  lastWatered DateTime
  toBeWatered DateTime
  catalogID   String

  user     User       @relation(fields: [userId], references: [id])
  Reminder Reminder[]
  Tags     Tag[]
}

// TODO: Remove this
model Species {
  id             String  @id @default(uuid())
  scientificName String
  genus          String
  family         String
  commonName     String?
  imageUrl       String?
  light          String?
  urlWikipediaEn String?
  waterFrequency Int?
}

model User {
  id                  String    @id @default(uuid())
  name                String    @unique
  email               String    @unique
  password            String
  isVerified          Boolean   @default(false)
  verificationCode    String?
  passwordResetCode   String?
  notificationEnabled Boolean   @default(false)
  expiresAt           DateTime?
  Plant               Plant[]
}

model Reminder {
  id      String @id @default(uuid())
  plantId String

  createdAt DateTime @default(now())
  label     String

  plant Plant @relation(fields: [plantId], references: [id])
}

model Tag {
  id      String @id @default(uuid())
  tagName String
  plantId String

  plant Plant @relation(fields: [plantId], references: [id])
}
